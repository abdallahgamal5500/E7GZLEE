<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/result_recycler_item_layout">

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/result_recycler_item_train_going"
        android:text="A"
        android:textSize="20dp"
        android:fontFamily="serif"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:id="@+id/result_recycler_item_train_number"/>

    <TextView
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:fontFamily="serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/result_recycler_item_train_number"
        app:layout_constraintEnd_toStartOf="@id/result_recycler_item_train_arrival"
        android:text="B"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:id="@+id/result_recycler_item_train_going"/>

    <TextView
        android:layout_width="85dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/result_recycler_item_train_going"
        app:layout_constraintEnd_toStartOf="@id/result_recycler_item_train_class"
        android:text="C"
        android:fontFamily="serif"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:id="@+id/result_recycler_item_train_arrival"/>

    <TextView
        android:layout_width="75dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/result_recycler_item_train_arrival"
        android:text="D"
        android:fontFamily="serif"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/result_recycler_item_train_class"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/result_recycler_item_train_arrival"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/border_2"
        android:text="BOOK NOW"
        android:fontFamily="serif"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"
        android:id="@+id/result_recycler_item_btn"/>


</androidx.constraintlayout.widget.ConstraintLayout>