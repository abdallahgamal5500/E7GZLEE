<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#fff"
        android:text="Booking"
        android:textSize="30dp"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:id="@+id/booking_textview"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/booking_textview"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/booking_train_number2"
                android:layout_marginLeft="30dp"
                android:text="Train number"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:id="@+id/booking_train_number1"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/booking_train_number1"
                android:layout_marginRight="30dp"
                android:text="Train number"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:textColor="@color/colorAccent"
                android:id="@+id/booking_train_number2"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_train_number1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/booking_train_number2"
                android:layout_marginLeft="30dp"
                android:text="Going station"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_going_station1"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_train_number2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/booking_going_station1"
                android:layout_marginRight="30dp"
                android:text="Going station"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_going_station2"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_going_station1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/booking_arrival2"
                android:layout_marginLeft="30dp"
                android:text="Arrival station"
                android:fontFamily="serif"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_arrival1"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_going_station2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/booking_arrival1"
                android:layout_marginRight="30dp"
                android:text="Arrival station"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_arrival2"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_arrival1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/booking_train_class2"
                android:layout_marginLeft="30dp"
                android:text="Train class"
                android:fontFamily="serif"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_train_class1"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_arrival2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/booking_train_class1"
                android:layout_marginRight="30dp"
                android:text="Train class"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_train_class2"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_train_class1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/booking_seat2"
                android:layout_marginLeft="30dp"
                android:text="Seat number"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_seat1"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_train_class2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/booking_seat1"
                android:layout_marginRight="30dp"
                android:text="Seat number"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_seat2"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_seat1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/booking_date2"
                android:layout_marginLeft="30dp"
                android:text="Booking date"
                android:fontFamily="serif"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_date1"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_seat2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/booking_date1"
                android:layout_marginRight="30dp"
                android:text="Booking date"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_date2"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_date1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/booking_day2"
                android:layout_marginLeft="30dp"
                android:text="Booking day"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_day1"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_date2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/booking_day1"
                android:layout_marginRight="30dp"
                android:text="Booking day"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_day2"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_day1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/booking_going_time2"
                android:layout_marginLeft="30dp"
                android:text="Going time"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_going_time1"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_day2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/booking_going_time1"
                android:layout_marginRight="30dp"
                android:text="Going time"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_going_time2"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_going_time1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/booking_arrival_time2"
                android:layout_marginLeft="30dp"
                android:text="Arrival time"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_arrival_time1"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_going_time2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/booking_arrival_time1"
                android:layout_marginRight="30dp"
                android:text="Arrival time"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_arrival_time2"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_arrival_time1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/booking_price2"
                android:layout_marginLeft="30dp"
                android:text="Ticket price"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_price1"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/booking_arrival_time2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/booking_price1"
                android:layout_marginRight="30dp"
                android:text="Ticket price"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_price2"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/booking_price1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/border_2"
                android:text="CONFIRM"
                android:textSize="20dp"
                android:textColor="#fff"
                android:fontFamily="serif"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:id="@+id/booking_btn_confirm"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/booking_btn_confirm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/border_3"
                android:text="CANCEL"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:textColor="#fff"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/booking_btn_cancel"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>




